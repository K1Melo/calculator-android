<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center_vertical"
              android:screenOrientation="portrait"
              tools:context=".MainActivity"
>


    <TextView
            android:hint="@string/button0"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/calculatorNumber"
            android:textAlignment="textEnd"
            android:singleLine="true"
            android:textSize="50sp"
            android:layout_marginEnd="15dp"
    />
    <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/result"
            android:textAlignment="textEnd"
            android:singleLine="true"
            android:textSize="30sp"
            android:layout_marginEnd="15dp"
    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center_horizontal"
    >


        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/clear"
                    android:textSize="20sp"
                    android:id="@+id/clearAll"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/clearOne"
                    android:textSize="20sp"
                    android:id="@+id/clearOne"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/percentage"
                    android:textSize="20sp"
                    android:id="@+id/percentage"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/divide"
                    android:textSize="20sp"
                    android:id="@+id/divide"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button1"
                    android:textSize="20sp"
                    android:id="@+id/number1"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button2"
                    android:textSize="20sp"
                    android:id="@+id/number2"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button3"
                    android:textSize="20sp"
                    android:id="@+id/number3"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/multiplication"
                    android:textSize="20sp"
                    android:id="@+id/multiplication"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button4"
                    android:textSize="20sp"
                    android:id="@+id/number4"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button5"
                    android:textSize="20sp"
                    android:id="@+id/number5"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button6"
                    android:textSize="20sp"
                    android:id="@+id/number6"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/subtraction"
                    android:textSize="20sp"
                    android:id="@+id/subtraction"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button7"
                    android:textSize="20sp"
                    android:id="@+id/number7"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button8"
                    android:textSize="20sp"
                    android:id="@+id/number8"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button9"
                    android:textSize="20sp"
                    android:id="@+id/number9"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/sum"
                    android:textSize="20sp"
                    android:id="@+id/sum"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/heart"
                    android:textSize="20sp"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/button0"
                    android:textSize="20sp"
                    android:id="@+id/number0"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/dot"
                    android:textSize="20sp"
                    android:id="@+id/dot"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/equals"
                    android:textSize="20sp"
                    android:id="@+id/equals"
                    style="?android:attr/buttonBarButtonStyle" app:strokeWidth="0.8dp" app:strokeColor="#292929"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>